int lca(int u,int v){
	if(depth[u]<depth[v])
		swap(u,v);	
	for(int i = 17; i >= 0; --i)	
		if(depth[u]-(1<<i)>=depth[v])
			u=dp[u][i];
	if(u==v)
		return u;	
	for(int i = 17; i >= 0; --i)
		if(dp[u][i]!=dp[v][i]){
			u=dp[u][i];
			v=dp[v][i];
		}			
	return dp[u][0];		
}



for(int i=1;i<18;i++){
        for(int j=1;j<=n;j++){
            dp[j][i]=dp[dp[j][i-1]][i-1];
        }
    }
